<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_bg"
    android:id="@+id/widget_container"
    android:padding="@dimen/widget_padding">
    <TextView
        android:textAlignment="center"
        android:id="@+id/title_text"
        android:textSize="@dimen/widget_title_sz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_title" />
<ListView
    android:id="@+id/totp_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <RelativeLayout android:id="@+id/empty_view"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView android:id="@+id/empty_view_text"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_view_content"
        android:textSize="@dimen/widget_content_sz"/>
        <Button android:id="@+id/btn_open_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_open_app"/>
    </RelativeLayout>
</LinearLayout>